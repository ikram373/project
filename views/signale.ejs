<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/aa9b0d42bd.js" crossorigin="anonymous"></script>
    <title>signale-Page</title>
    <link rel="stylesheet" href="/signale.css">
</head>
<body>
   <div class="container">
    <nav>
        <div class="logo"><img src="/Algerian Crafters (5).png" alt=""></div>
      
            <ul>
                <li><a href="accueil" class="nav-item">Accueil</a></li>
                <li><a href="recherche" class="nav-item">Trouver un Artisan</a></li>
            </ul>
            <form  action="/rechFullname" method="post">
            <div class="search">
                <i class="fas fa-search icon"></i>
                <input class="input" type="text" placeholder=" Recherche . . ." name="fullname">
        </div>
    </form>
            
            <div class="button">
                <button class="profile"onclick="profile()">Profile</button>
               
            </div>
            <ul> 
                
                <div class="button">
                    <button class="dec"  onclick="logoutbutn()">Se Déconnecter </button>
                   
                </div>
                
            </ul>
        </nav>
    <div class="box-contain">
        <h2 class="title">Signlaer Un Artisan </h2>
        <form action="/signale" method="post" id="sig">
            <div class="grid1">
                <img src="/palm-recognition.png" alt="" width="100" height="100" class="support-center">

            </div>
           <div class="grid2">
            <p class="raison">Entrer votre raison de signale</p>
            <div class="content">
          
              <label class="container">

                <input type="checkbox" name="raison" value="faux compte">  faux compte
                <span class="checkmark"></span>
              </label>
              <label class="container">
                <input type="checkbox" name="raison" value="Numéro de téléphone inaccessible">  Numéro de téléphone inaccessible
                <span class="checkmark"></span>
              </label>
              <label class="container">
                <input type="checkbox" name="raison" value="Il poste des choses hors domaine">  Il poste des choses hors domaine
                <span class="checkmark"></span>
              </label>
              <input type="text" hidden value="<%=id%>" name="ida" id="">
            </div>

          
    <button class="poster" type="submit"onclick="sendChecked()" >Signaler</button>
        </form>
    </div>

    </div>
   
    </div>
   </div>
</body>
<script>
    function sendChecked(){
    var checkedBoxes=[]
    var markedCheckbox=document.getElementsByName('raison');
    for(var checkbox of markedCheckbox){
        if(checkbox.checked){
            checkedBoxes.push(checkbox.value)
        }
    }
    console.log(checkedBoxes)
    var input=document.createElement("input");
    input.setAttribute("type","hidden")
    input.setAttribute("name","checkedvalues");
    input.setAttribute("value",checkedBoxes);
    var form=document.getElementById("sig")
    form.appendChild(input)
    form.submit();
    
    
    }
    
    function profilebutn(){
            document.location.href="/profileUser";
      

        }
        function logoutbutn(){
            document.location.href="/logout";
      

        }
        </script>
</html>